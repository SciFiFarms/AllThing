    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Home Assistant",
            "type": "python",
            "request": "attach",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/home-assistant/config/",
                    "remoteRoot": "/config/"
                }, {
                    "localRoot": "${workspaceFolder}/home-assistant/src/",
                    "remoteRoot": "/usr/src/app/"
                }
            ],
            "port": 5678,
            "logToFile": true,
            //"secret": "my_secret",
            "host": "localhost"
        },
        {
            "name": "Debug esphomeyaml",
            "type": "python",
            "request": "attach",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/esphomeyaml/",
                    "remoteRoot": "/usr/src/app/"
                }
            ],
            "port": 6051,
            //"logToFile": true,
            //"secret": "my_secret",
            "host": "localhost"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Debug NodeJS",
            "address": "localhost",
            "port": 9229, 
            "localRoot": "/home/spencer/src/althing/node-red/",
            "remoteRoot": "/usr/src/node-red/"
        }
    ]
}